<p id="notice"><%= notice %></p>

<h1>Trains</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Totalcapacity</th>
      <th>Type</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th>Rundays</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= train.number %></td>
        <td><%= train.name %></td>
        <td><%= train.totalcapacity %></td>
        <td><%= train.type %></td>
        <td><%= train.starttime %></td>
        <td><%= train.endtime %></td>
        <td><%= train.rundays %></td>
        <td><%= link_to 'Show', train %></td>
        <td><%= link_to 'Edit', edit_train_path(train) %></td>
        <td><%= link_to 'Destroy', train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

